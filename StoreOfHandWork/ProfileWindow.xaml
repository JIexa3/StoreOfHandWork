<Window x:Class="StoreOfHandWork.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:StoreOfHandWork.Converters"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="Профиль" Height="800" Width="1150"
        WindowStartupLocation="CenterScreen"
        Background="#f0f2f5">
    <Window.Resources>
        <DropShadowEffect x:Key="CommonShadow" 
                         BlurRadius="10" 
                         Direction="270" 
                         ShadowDepth="2" 
                         Opacity="0.2"/>

        <converters:OrderStatusConverter x:Key="StatusConverter"/>

        <Style x:Key="MenuButtonStyle" TargetType="ListBoxItem">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2196F3"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ContentPanelStyle" TargetType="StackPanel">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="BorderBrush" Value="#dee2e6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PickupPointTextStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        
        <Style x:Key="PickupPointHeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#f8f9fa"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковое меню -->
        <Border Background="White" 
                CornerRadius="10" 
                Margin="0,0,15,0"
                Effect="{StaticResource CommonShadow}">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="20">
                    <TextBlock Text="Личный кабинет"
                             FontSize="22"
                             FontWeight="SemiBold"/>
                    <TextBlock x:Name="UserEmailText"
                             Text="{Binding Email}"
                             Foreground="#666"
                             Margin="0,5,0,0"/>
                </StackPanel>

                <ListBox x:Name="MenuListBox" 
                         BorderThickness="0"
                         Background="Transparent"
                         Margin="10,0"
                         SelectionChanged="MenuListBox_SelectionChanged">
                    <ListBoxItem x:Name="PersonalInfoItem" 
                                Content="Личная информация" 
                                Style="{StaticResource MenuButtonStyle}"/>
                    <ListBoxItem x:Name="OrderHistoryItem" 
                                Content="История заказов"
                                Style="{StaticResource MenuButtonStyle}"/>
                    <ListBoxItem x:Name="ReturnRequestsItem" 
                                 x:FieldModifier="public"
                                 Content="Возврат товаров"
                                 Style="{StaticResource MenuButtonStyle}"/>
                    <ListBoxItem x:Name="StatisticsItem" 
                                Content="Моя статистика"
                                Style="{StaticResource MenuButtonStyle}"/>
                    <ListBoxItem x:Name="SecurityItem" 
                                Content="Безопасность"
                                Style="{StaticResource MenuButtonStyle}"/>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Основное содержимое -->
        <Border Grid.Column="1" 
                Background="White"
                CornerRadius="10"
                Effect="{StaticResource CommonShadow}">
            <Grid x:Name="ContentArea" Margin="30">
                <!-- Личная информация -->
                <StackPanel x:Name="PersonalInfoPanel" 
                          Visibility="Visible"
                          Style="{StaticResource ContentPanelStyle}">
                    <TextBlock x:Name="PersonalInfoTitle" 
                             Text="Личная информация"
                             FontSize="24"
                             FontWeight="SemiBold"
                             Margin="0,0,0,20"/>

                    <TextBlock x:Name="NameLabel" 
                             Text="Имя" 
                             FontWeight="Medium"
                             Margin="0,5"/>
                    <TextBox x:Name="NameTextBox" 
                            Style="{StaticResource InputTextBox}"/>

                    <TextBlock x:Name="EmailLabel" 
                             Text="Email" 
                             FontWeight="Medium"
                             Margin="0,15,0,5"/>
                    <TextBox x:Name="EmailTextBox"
                            Style="{StaticResource InputTextBox}"/>

                    <TextBlock x:Name="PhoneLabel" 
                             Text="Телефон" 
                             FontWeight="Medium"
                             Margin="0,15,0,5"/>
                    <TextBox x:Name="PhoneTextBox"
                            Style="{StaticResource InputTextBox}"/>

                    <TextBlock x:Name="AddressLabel" 
                             Text="Адрес" 
                             FontWeight="Medium"
                             Margin="0,15,0,5"/>
                    <TextBox x:Name="AddressTextBox" 
                            Height="80"
                            Style="{StaticResource InputTextBox}"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto"/>

                    <StackPanel x:Name="ButtonsPanel" 
                              Orientation="Horizontal" 
                              HorizontalAlignment="Right" 
                              Margin="0,30,0,0">
                        <Button x:Name="SaveButton" 
                                Content="Сохранить"
                                Click="SaveChanges_Click"
                                Style="{StaticResource ActionButton}"
                                Margin="0,0,10,0"/>
                        <Button x:Name="CancelButton" 
                                Content="Отмена"
                                Click="Cancel_Click"
                                Style="{StaticResource ActionButton}"
                                Background="#6c757d"/>
                    </StackPanel>
                </StackPanel>

                <!-- История заказов -->
                <StackPanel x:Name="OrderHistoryPanel" 
                          Visibility="Collapsed"
                          Style="{StaticResource ContentPanelStyle}">
                    <TextBlock Text="История заказов"
                             FontSize="24"
                             FontWeight="SemiBold"
                             Margin="0,0,0,20"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Фильтр по статусу:" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                        <ComboBox x:Name="StatusFilterComboBox" 
                                Width="150"
                                SelectionChanged="StatusFilter_SelectionChanged">
                            <ComboBoxItem Content="Все статусы"/>
                            <ComboBoxItem Content="Новый"/>
                            <ComboBoxItem Content="В обработке"/>
                            <ComboBoxItem Content="Отправлен"/>
                            <ComboBoxItem Content="Доставлен"/>
                            <ComboBoxItem Content="Отменен"/>
                        </ComboBox>
                    </StackPanel>

                    <ListView x:Name="OrdersListView"
                            BorderThickness="1"
                            BorderBrush="#dee2e6">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Номер заказа" 
                                              DisplayMemberBinding="{Binding OrderNumber}" 
                                              Width="120"/>
                                <GridViewColumn Header="Дата" 
                                              DisplayMemberBinding="{Binding OrderDate, StringFormat={}{0:dd.MM.yyyy HH:mm}}" 
                                              Width="150"/>
                                <GridViewColumn Header="Статус" 
                                              DisplayMemberBinding="{Binding Status}" 
                                              Width="100"/>
                                <GridViewColumn Header="Пункт выдачи" 
                                              Width="200">
                                    <GridViewColumn.HeaderContainerStyle>
                                        <StaticResource ResourceKey="PickupPointHeaderStyle"/>
                                    </GridViewColumn.HeaderContainerStyle>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource PickupPointTextStyle}">
                                                <Run Text="{Binding PickupPoint.Address, StringFormat='{}Адрес: {0}'}" />
                                                <LineBreak/>
                                                <Run Text="{Binding PickupPoint.WorkingHours, StringFormat='{}Время работы: {0}'}" 
                                                     Foreground="#666"/>
                                                <LineBreak/>
                                                <Run Text="{Binding PickupPoint.Phone, StringFormat='{}Телефон: {0}'}" 
                                                     Foreground="#666"/>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Сумма" 
                                              DisplayMemberBinding="{Binding TotalAmount, StringFormat={}{0:N2} ₽}" 
                                              Width="100"/>
                                <GridViewColumn Header="Действия" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Подробнее"
                                                    Click="ViewOrderDetails_Click"
                                                    Tag="{Binding}"
                                                    Style="{StaticResource ActionButton}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
                <!-- Статистика -->
                <StackPanel x:Name="StatisticsPanel" 
                          Visibility="Collapsed"
                          Style="{StaticResource ContentPanelStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Моя статистика"
                                 FontSize="24"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,20"/>
                        <Button Grid.Column="1"
                                Content="Обновить"
                                Click="RefreshStatistics_Click"
                                Style="{StaticResource ActionButton}"
                                Margin="0,0,0,20"/>
                    </Grid>
                    <ContentControl x:Name="StatisticsControl"/>
                </StackPanel>

                <!-- Безопасность -->
                <StackPanel x:Name="SecurityPanel" 
                          Visibility="Collapsed" 
                          Margin="20">
                    <TextBlock Text="Смена пароля" 
                             FontSize="24"
                             FontWeight="SemiBold" 
                             Margin="0,0,0,20"/>

                    <TextBlock Text="Требования к паролю:"
                             Margin="0,0,0,5"
                             FontWeight="Medium"/>
                    <TextBlock Margin="10,0,0,20"
                             TextWrapping="Wrap"
                             Foreground="#666">
                        <Run>• Минимум 6 символов</Run>
                        <LineBreak/>
                        <Run>• Хотя бы одна заглавная буква</Run>
                        <LineBreak/>
                        <Run>• Хотя бы одна строчная буква</Run>
                        <LineBreak/>
                        <Run>• Хотя бы один специальный символ (!@#$%^&amp;*(),.?":{}|&lt;&gt;)</Run>
                    </TextBlock>

                    <TextBlock Text="Текущий пароль:" 
                             FontWeight="Medium"
                             Margin="0,0,0,5"/>
                    <PasswordBox x:Name="CurrentPasswordBox" 
                               Height="35"
                               Padding="10,5"
                               Margin="0,0,0,15"
                               Background="#f8f9fa"
                               BorderBrush="#dee2e6"
                               BorderThickness="1"/>

                    <TextBlock Text="Новый пароль:" 
                             FontWeight="Medium"
                             Margin="0,0,0,5"/>
                    <PasswordBox x:Name="NewPasswordBox" 
                               Height="35"
                               Padding="10,5"
                               Margin="0,0,0,15"
                               Background="#f8f9fa"
                               BorderBrush="#dee2e6"
                               BorderThickness="1"/>

                    <TextBlock Text="Подтверждение пароля:" 
                             FontWeight="Medium"
                             Margin="0,0,0,5"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" 
                               Height="35"
                               Padding="10,5"
                               Margin="0,0,0,15"
                               Background="#f8f9fa"
                               BorderBrush="#dee2e6"
                               BorderThickness="1"/>

                    <TextBlock x:Name="PasswordErrorText"
                             Foreground="#dc3545"
                             TextWrapping="Wrap"
                             Margin="0,0,0,15"
                             Visibility="Collapsed"/>

                    <Button Content="Сменить пароль" 
                            Width="150" 
                            Height="35" 
                            HorizontalAlignment="Left"
                            Click="ChangePassword_Click"
                            Style="{StaticResource ActionButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
