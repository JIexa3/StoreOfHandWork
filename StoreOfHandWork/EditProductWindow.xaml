<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="StoreOfHandWork.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование товара"
        Height="550"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Редактирование товара"
                  HorizontalAlignment="Center"
                  FontSize="20"
                  Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Название товара:"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="NameTextBox"
                        Margin="0,0,0,15"/>

                <TextBlock Text="Описание:"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="DescriptionTextBox"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        Height="100"
                        Margin="0,0,0,15"/>

                <TextBlock Text="Цена:"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="PriceTextBox"
                        Margin="0,0,0,15"/>

                <TextBlock Text="Количество на складе:"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="StockTextBox"
                        Margin="0,0,0,15"/>

                <TextBlock Text="Категория:"
                          Margin="0,0,0,5"/>
                <ComboBox x:Name="CategoryComboBox"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Изображение:"
                          Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="ImagePathTextBox"
                            IsReadOnly="True"
                            Margin="0,0,10,0"/>
                    <Button Content="Выбрать"
                            Grid.Column="1"
                            Width="100"
                            Click="SelectImage_Click"
                            Style="{StaticResource SecondaryButton}"/>
                </Grid>

                <Image x:Name="ProductImage"
                       Height="150"
                       Stretch="Uniform"
                       Margin="0,0,0,15"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="Сохранить"
                    Width="120"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"
                    Style="{StaticResource PrimaryButton}"/>
            <Button Content="Отмена"
                    Width="120"
                    Click="CancelButton_Click"
                    Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </Grid>
</Window>
