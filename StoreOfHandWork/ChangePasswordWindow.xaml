<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="StoreOfHandWork.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Смена пароля" Height="460" Width="400"
        WindowStartupLocation="CenterScreen">
    
    <Border Background="{StaticResource SurfaceColor}" 
            CornerRadius="8" 
            Margin="20"
            Padding="30">
        <StackPanel>
            <TextBlock Text="Смена пароля"
                     FontSize="24"
                     FontWeight="SemiBold"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,30"/>
            
            <TextBlock Text="Текущий пароль"/>
            <PasswordBox x:Name="CurrentPasswordBox"
                        Margin="0,5,0,15"/>
            
            <TextBlock Text="Новый пароль"/>
            <PasswordBox x:Name="NewPasswordBox"
                        Margin="0,5,0,15"/>
            
            <TextBlock Text="Подтвердите новый пароль"/>
            <PasswordBox x:Name="ConfirmNewPasswordBox"
                        Margin="0,5,0,25"/>
            
            <Button Content="Сменить пароль"
                    Click="ChangePasswordButton_Click"
                    Height="40"
                    Margin="0,0,0,15"/>
            
            <TextBlock x:Name="ErrorTextBlock"
                      Foreground="Red"
                      TextWrapping="Wrap"
                      Margin="0,10,0,0"
                      HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>
