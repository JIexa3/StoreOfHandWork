<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="StoreOfHandWork.Controls.UserStatisticsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Общая сумма расходов -->
        <Border Grid.Row="0" 
                Margin="10"
                Background="#F5F5F5"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="5">
            <StackPanel Margin="15">
                <TextBlock Text="Общая сумма расходов:"
                          FontSize="18"
                          Margin="0,0,0,5"/>
                <TextBlock x:Name="TotalSpentText"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="#2196F3"/>
            </StackPanel>
        </Border>

        <!-- Переключатель типа графика -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">
            <RadioButton x:Name="ProductsRadio"
                         Content="По товарам"
                         IsChecked="True"
                         Margin="0,0,20,0"
                         Checked="RadioButton_Checked"/>
            <RadioButton x:Name="CategoriesRadio"
                         Content="По категориям"
                         Checked="RadioButton_Checked"/>
        </StackPanel>

        <!-- График -->
        <Border Grid.Row="2"
                Margin="10"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="5">
            <lvc:PieChart x:Name="StatisticsChart"
                         Height="400"/>
        </Border>
    </Grid>
</UserControl>
