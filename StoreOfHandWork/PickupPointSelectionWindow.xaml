<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="StoreOfHandWork.PickupPointSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gmaps="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        Title="Выбор пункта выдачи" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" Margin="10">
            <StackPanel DockPanel.Dock="Bottom" Margin="0,10,0,0">
                <Button Content="Выбрать" Click="SelectButton_Click" Margin="0,5"/>
                <Button Content="Отмена" Click="CancelButton_Click" Margin="0,5"/>
            </StackPanel>
            
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox x:Name="PickupPointsListBox" 
                         SelectionChanged="PickupPointsListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,5">
                                <TextBlock Text="{Binding Address}" FontWeight="Bold" 
                                         TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding WorkingHours}" Foreground="Gray"/>
                                <TextBlock Text="{Binding Phone}" Foreground="Gray"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </DockPanel>

        <gmaps:GMapControl x:Name="MapControl" Grid.Column="1" Margin="10"/>
    </Grid>
</Window> 