<Page x:Class="StoreOfHandWork.Pages.ProductReviewsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StoreOfHandWork.Pages"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Отзывы о товаре">
      
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и информация о товаре -->
        <StackPanel Grid.Row="0" Margin="15">
            <TextBlock x:Name="ProductNameText" Text="Название товара" FontSize="24" FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock x:Name="ProductRatingText" Text="4.7" FontSize="18" FontWeight="Bold"/>
                <TextBlock Text=" из 5" FontSize="16" Margin="2,0,0,0"/>
                <TextBlock x:Name="ReviewCountText" Text="(42 отзыва)" FontSize="14" Margin="10,2,0,0" Foreground="Gray"/>
            </StackPanel>
        </StackPanel>

        <!-- Форма для добавления отзыва -->
        <Border Grid.Row="1" Background="#F5F5F5" Padding="15" Margin="15,0,15,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Оставить отзыв" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Ваша оценка: " VerticalAlignment="Center"/>
                    <StackPanel x:Name="RatingPanel" Orientation="Horizontal">
                        <RadioButton Content="1" GroupName="Rating" Tag="1" Margin="5,0" Checked="RatingRadioButton_Checked"/>
                        <RadioButton Content="2" GroupName="Rating" Tag="2" Margin="5,0" Checked="RatingRadioButton_Checked"/>
                        <RadioButton Content="3" GroupName="Rating" Tag="3" Margin="5,0" Checked="RatingRadioButton_Checked"/>
                        <RadioButton Content="4" GroupName="Rating" Tag="4" Margin="5,0" Checked="RatingRadioButton_Checked"/>
                        <RadioButton Content="5" GroupName="Rating" Tag="5" Margin="5,0" Checked="RatingRadioButton_Checked"/>
                    </StackPanel>
                </StackPanel>
                
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="ReviewTextBox" Grid.Column="0" Height="80" TextWrapping="Wrap" 
                             AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                             Margin="0,0,10,0">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Resources>
                                    <VisualBrush x:Key="HintBrush" TileMode="None" Opacity="0.5" Stretch="None" AlignmentX="Left">
                                        <VisualBrush.Visual>
                                            <TextBlock Text="Напишите ваш отзыв здесь..." FontStyle="Italic"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Style.Resources>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background" Value="{StaticResource HintBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    
                    <Button Grid.Column="1" Content="Отправить" Width="100" Height="30" 
                            VerticalAlignment="Bottom" Click="SubmitReviewButton_Click"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Список отзывов -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15,0,15,15">
                <TextBlock x:Name="EmptyReviewsMessage" Text="У этого товара пока нет отзывов. Будьте первым, кто оставит отзыв!" 
                           FontSize="14" Margin="0,20,0,0" TextWrapping="Wrap" 
                           HorizontalAlignment="Center" Visibility="Collapsed"/>
                
                <ItemsControl x:Name="ReviewsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,15" BorderThickness="1" BorderBrush="#EEEEEE" CornerRadius="5">
                                <Grid Margin="15">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Верхняя панель с именем пользователя и датой -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="{Binding User.Name}" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Text="{Binding CreatedDate, StringFormat={}{0:dd.MM.yyyy}}" 
                                                   Foreground="Gray" HorizontalAlignment="Right"/>
                                    </Grid>
                                    
                                    <!-- Рейтинг -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,5">
                                        <TextBlock Text="Оценка: " VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Rating}" FontWeight="SemiBold"/>
                                        <TextBlock Text=" из 5" Margin="2,0,0,0"/>
                                    </StackPanel>
                                    
                                    <!-- Отзыв -->
                                    <TextBlock Grid.Row="2" Text="{Binding Comment}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                    
                                    <!-- Кнопки для редактирования/удаления отзыва (видимы только для автора отзыва или администратора) -->
                                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0" 
                                              Visibility="{Binding IsUserReview, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Button Content="Редактировать" Width="120" Height="25" Margin="0,0,10,0" 
                                                Click="EditReviewButton_Click" Tag="{Binding Id}"/>
                                        <Button Content="Удалить" Width="100" Height="25" 
                                                Click="DeleteReviewButton_Click" Tag="{Binding Id}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
