<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="StoreOfHandWork.Pages.OrdersManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:models="clr-namespace:StoreOfHandWork.Models"
      xmlns:converters="clr-namespace:StoreOfHandWork.Converters"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Управление заказами">

    <Page.Resources>
        <ObjectDataProvider x:Key="OrderStatusValues" 
                          MethodName="GetValues"
                          ObjectType="{x:Type models:OrderStatus}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:OrderStatus"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <converters:StatusToCollectButtonVisibilityConverter x:Key="StatusToCollectButtonVisibilityConverter"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="OrdersDataGrid"
                  Grid.Row="0"
                  Margin="10"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionChanged="OrdersDataGrid_SelectionChanged"
                  RowEditEnding="OrdersDataGrid_RowEditEnding">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                                  Binding="{Binding Id}"
                                  Width="Auto"
                                  IsReadOnly="True"/>
                <DataGridTextColumn Header="Дата заказа"
                                  Binding="{Binding OrderDate, StringFormat={}{0:dd.MM.yyyy HH:mm}}"
                                  Width="Auto"
                                  IsReadOnly="True"/>
                <DataGridTextColumn Header="Покупатель"
                                  Binding="{Binding User.Name}"
                                  Width="*"
                                  IsReadOnly="True"/>
                <DataGridTextColumn Header="Email"
                                  Binding="{Binding User.Email}"
                                  Width="*"
                                  IsReadOnly="True"/>
                <DataGridComboBoxColumn Header="Статус"
                                      SelectedItemBinding="{Binding Status, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding Source={StaticResource OrderStatusValues}}"
                                      Width="Auto">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource">
                                <Setter.Value>
                                    <x:Array Type="sys:String">
                                        <sys:String>Новый</sys:String>
                                        <sys:String>В обработке</sys:String>
                                        <sys:String>Отправлен</sys:String>
                                        <sys:String>Доставлен</sys:String>
                                        <sys:String>Отменен</sys:String>
                                    </x:Array>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource">
                                <Setter.Value>
                                    <x:Array Type="sys:String">
                                        <sys:String>Новый</sys:String>
                                        <sys:String>В обработке</sys:String>
                                        <sys:String>Отправлен</sys:String>
                                        <sys:String>Доставлен</sys:String>
                                        <sys:String>Отменен</sys:String>
                                    </x:Array>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>
                <DataGridTemplateColumn Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Собрать"
                                        Click="CollectOrder_Click"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        Padding="10,5"
                                        Margin="2"
                                        Visibility="{Binding Status, Converter={StaticResource StatusToCollectButtonVisibilityConverter}}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#388E3C"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="Сохранить"
                                        x:Name="ChangeStatusButton"
                                        Click="SaveButton_Click"
                                        Background="#2196F3"
                                        Foreground="White"
                                        Padding="10,5"
                                        Margin="2">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1976D2"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статусная строка -->
        <TextBlock x:Name="StatusBar"
                   Grid.Row="1"
                   Margin="10,5"
                   FontSize="14"/>
    </Grid>
</Page>
