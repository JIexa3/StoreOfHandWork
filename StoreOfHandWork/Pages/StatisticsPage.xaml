<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="StoreOfHandWork.Pages.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      Title="Статистика">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Статистика магазина"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Статистика продаж -->
            <Border Grid.Column="0" 
                    Grid.Row="0"
                    Background="White"
                    CornerRadius="5"
                    Margin="5"
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Продажи"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="За сегодня:"
                                   Margin="0,0,10,5"/>
                        <TextBlock x:Name="TodaySalesText"
                                   Grid.Column="1"
                                   Text="0 ₽"
                                   FontWeight="Bold"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="За неделю:"
                                   Margin="0,0,10,5"/>
                        <TextBlock x:Name="WeekSalesText"
                                   Grid.Column="1"
                                   Text="0 ₽"
                                   FontWeight="Bold"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="За месяц:"
                                   Margin="0,0,10,5"/>
                        <TextBlock x:Name="MonthSalesText"
                                   Grid.Column="1"
                                   Text="0 ₽"
                                   FontWeight="Bold"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Статистика заказов -->
            <Border Grid.Column="1" 
                    Grid.Row="0"
                    Background="White"
                    CornerRadius="5"
                    Margin="5"
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Заказы"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Новых сегодня:"
                                   Margin="0,0,10,5"/>
                        <TextBlock x:Name="TodayOrdersText"
                                   Grid.Column="1"
                                   Text="0"
                                   FontWeight="Bold"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="В обработке:"
                                   Margin="0,0,10,5"/>
                        <TextBlock x:Name="ProcessingOrdersText"
                                   Grid.Column="1"
                                   Text="0"
                                   FontWeight="Bold"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Выполнено за месяц:"
                                   Margin="0,0,10,5"/>
                        <TextBlock x:Name="CompletedOrdersText"
                                   Grid.Column="1"
                                   Text="0"
                                   FontWeight="Bold"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Круговой график популярных товаров -->
            <Border Grid.Column="0"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Background="White"
                    CornerRadius="5"
                    Margin="5"
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Популярные товары (по количеству продаж)"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Margin="0,0,0,10"/>
                    <lvc:PieChart x:Name="PopularProductsChart"
                                 Height="300"/>
                </StackPanel>
            </Border>

            <!-- Таблица топ продаж -->
            <Border Grid.Column="0" 
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Background="White"
                    CornerRadius="5"
                    Margin="5"
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Топ продаж"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                    <DataGrid x:Name="TopSalesGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="All"
                              BorderBrush="#ddd"
                              BorderThickness="1"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="*"/>
                            <DataGridTextColumn Header="Продано" Binding="{Binding SoldCount}" Width="100"/>
                            <DataGridTextColumn Header="Сумма" Binding="{Binding TotalAmount, StringFormat={}{0:N2} ₽}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
