<Page x:Class="StoreOfHandWork.Pages.WishListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StoreOfHandWork.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Список желаний">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Мой список желаний" FontSize="24" FontWeight="SemiBold" Margin="10,15,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="wishListPanel" Margin="10">
                <TextBlock x:Name="EmptyWishListMessage" Text="Ваш список желаний пуст. Добавьте товары из каталога." 
                           FontSize="16" Margin="0,20,0,0" TextWrapping="Wrap" 
                           HorizontalAlignment="Center" Visibility="Collapsed"/>
                
                <ItemsControl x:Name="WishListItemsControl" Margin="0,10,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,15" BorderThickness="1" BorderBrush="#EEEEEE" CornerRadius="5">
                                <Grid Margin="10" Height="120">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Изображение товара -->
                                    <Border Grid.Column="0" Width="100" Height="100" CornerRadius="5">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding Product.ImagePath}"/>
                                        </Border.Background>
                                    </Border>

                                    <!-- Информация о товаре -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                                        <TextBlock Text="{Binding Product.Name}" FontSize="16" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Product.Price, StringFormat={}{0:N0} ₽}" FontSize="14" Margin="0,5,0,0"/>
                                        <TextBlock Text="{Binding Product.Category.Name}" FontSize="12" Margin="0,5,0,0" Foreground="Gray"/>
                                        <TextBlock Text="{Binding DateAdded, StringFormat=Добавлено: {0:dd.MM.yyyy}}" FontSize="11" Margin="0,10,0,0" Foreground="Gray"/>
                                    </StackPanel>

                                    <!-- Кнопки действий -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="10,0,0,0">
                                        <Button Content="В корзину" Width="120" Height="30" Margin="0,0,0,10" 
                                                Click="AddToCartButton_Click" Tag="{Binding ProductId}"/>
                                        <Button Content="Удалить" Width="120" Height="30" 
                                                Click="RemoveFromWishListButton_Click" Tag="{Binding Id}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
