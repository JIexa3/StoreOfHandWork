<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="StoreOfHandWork.Pages.ProductsManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Управление товарами">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель с кнопками -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,20">
            <Button Content="Добавить товар"
                    Style="{DynamicResource PrimaryButton}"
                    Click="AddProduct_Click"
                    Margin="0,0,10,0"/>
            
            <TextBox x:Name="SearchBox"
                     Width="200"
                     Margin="0,0,10,0"
                     TextChanged="SearchBox_TextChanged">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Resources>
                            <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                <VisualBrush.Visual>
                                    <TextBlock Text="Поиск..." Foreground="Gray" />
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Style.Resources>
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="Background" Value="White" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            
            <Button Content="Обновить"
                    Style="{DynamicResource SecondaryButton}"
                    Click="RefreshProducts_Click"/>
        </StackPanel>

        <!-- Таблица товаров -->
        <DataGrid x:Name="ProductsGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  GridLinesVisibility="Horizontal"
                  RowHeaderWidth="0"
                  Background="White"
                  BorderThickness="1"
                  BorderBrush="{StaticResource BorderColor}">
            
            <DataGrid.Resources>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#F5F5F5"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                  Binding="{Binding Id}" 
                                  Width="60"/>
                
                <DataGridTextColumn Header="Название" 
                                  Binding="{Binding Name}" 
                                  Width="*"/>
                
                <DataGridTextColumn Header="Категория" 
                                  Binding="{Binding Category.Name}" 
                                  Width="150"/>
                
                <DataGridTextColumn Header="Цена" 
                                  Binding="{Binding Price, StringFormat={}{0:N2} ₽}" 
                                  Width="100"/>
                
                <DataGridTextColumn Header="В наличии" 
                                  Binding="{Binding StockQuantity}" 
                                  Width="100"/>

                <DataGridTemplateColumn Header="Действия" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="✎"
                                        Click="EditProduct_Click"
                                        Margin="0,0,5,0"
                                        Style="{StaticResource SecondaryButton}"
                                        ToolTip="Редактировать"/>
                                <Button Content="✕"
                                        Click="DeleteProduct_Click"
                                        Style="{StaticResource DangerButton}"
                                        ToolTip="Удалить"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
