<Page x:Class="StoreOfHandWork.Pages.CategoriesAndTagsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StoreOfHandWork.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Управление категориями и тегами">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Раздел категорий -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
            <TextBlock Text="Категории товаров" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="CategoryNameTextBox" Grid.Column="0" Margin="0,0,10,0">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Resources>
                                <VisualBrush x:Key="HintBrush" TileMode="None" Opacity="0.5" Stretch="None" AlignmentX="Left">
                                    <VisualBrush.Visual>
                                        <TextBlock Text="Введите название категории..." FontStyle="Italic"/>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Style.Resources>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background" Value="{StaticResource HintBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <Button Grid.Column="1" Content="Добавить" Width="100" Click="AddCategoryButton_Click"/>
            </Grid>
            
            <TextBox x:Name="CategoryDescriptionTextBox" Margin="0,10,0,0" Height="60" 
                     TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Resources>
                            <VisualBrush x:Key="HintBrush" TileMode="None" Opacity="0.5" Stretch="None" AlignmentX="Left">
                                <VisualBrush.Visual>
                                    <TextBlock Text="Описание категории (необязательно)..." FontStyle="Italic"/>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Style.Resources>
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background" Value="{StaticResource HintBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </StackPanel>
        
        <!-- Раздел тегов -->
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Теги товаров" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15"/>
                
                <Button Grid.Column="1" Content="Расширенное управление" 
                        Click="OpenTagsManagementWindow_Click" 
                        Background="#3498db" Foreground="White" 
                        Padding="8,3" Margin="0,0,0,15"/>
            </Grid>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="TagNameTextBox" Grid.Column="0" Margin="0,0,10,0">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Resources>
                                <VisualBrush x:Key="HintBrush" TileMode="None" Opacity="0.5" Stretch="None" AlignmentX="Left">
                                    <VisualBrush.Visual>
                                        <TextBlock Text="Введите название тега..." FontStyle="Italic"/>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Style.Resources>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background" Value="{StaticResource HintBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <Button Grid.Column="1" Content="Добавить" Width="100" Click="AddTagButton_Click"/>
            </Grid>
        </StackPanel>
        
        <!-- Список категорий -->
        <Border Grid.Row="1" Grid.Column="0" BorderThickness="1" BorderBrush="#EEEEEE" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Список категорий" FontSize="16" FontWeight="SemiBold" Margin="10"/>
                
                <ListView x:Name="CategoriesListView" Grid.Row="1" Margin="5" BorderThickness="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Название" Width="150" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Описание" Width="150" DisplayMemberBinding="{Binding Description}"/>
                            <GridViewColumn Header="Товаров" Width="70" DisplayMemberBinding="{Binding ProductCount}"/>
                            <GridViewColumn Header="Действия" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="✏️" ToolTip="Редактировать" 
                                                    Width="30" Height="25" Margin="0,0,5,0" 
                                                    Click="EditCategoryButton_Click" Tag="{Binding Id}"/>
                                            <Button Content="❌" ToolTip="Удалить" 
                                                    Width="30" Height="25" 
                                                    Click="DeleteCategoryButton_Click" Tag="{Binding Id}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>
        
        <!-- Список тегов -->
        <Border Grid.Row="1" Grid.Column="1" BorderThickness="1" BorderBrush="#EEEEEE" Margin="10,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Список тегов" FontSize="16" FontWeight="SemiBold" Margin="10"/>
                
                <ListView x:Name="TagsListView" Grid.Row="1" Margin="5" BorderThickness="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Название" Width="200" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Товаров" Width="70" DisplayMemberBinding="{Binding ProductCount}"/>
                            <GridViewColumn Header="Действия" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="✏️" ToolTip="Редактировать" 
                                                    Width="30" Height="25" Margin="0,0,5,0" 
                                                    Click="EditTagButton_Click" Tag="{Binding Id}"/>
                                            <Button Content="❌" ToolTip="Удалить" 
                                                    Width="30" Height="25" 
                                                    Click="DeleteTagButton_Click" Tag="{Binding Id}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</Page>
