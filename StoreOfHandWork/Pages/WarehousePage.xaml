<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="StoreOfHandWork.Pages.WarehousePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Управление складом">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и фильтры -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Управление складом"
                     FontSize="24"
                     FontWeight="Bold"
                     Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <ComboBox x:Name="StatusFilter" Width="200" Margin="0,0,10,0">
                    <ComboBoxItem Content="Все заказы" IsSelected="True"/>
                    <ComboBoxItem Content="Не собраны"/>
                    <ComboBoxItem Content="Частично собраны"/>
                    <ComboBoxItem Content="Полностью собраны"/>
                </ComboBox>

                <TextBox x:Name="SearchBox" 
                         Width="250"
                         Margin="0,0,10,0"
                         GotFocus="SearchBox_GotFocus"
                         LostFocus="SearchBox_LostFocus"
                         Text="Поиск по номеру заказа"/>
            </StackPanel>
        </StackPanel>

        <!-- Список заказов -->
        <DataGrid x:Name="OrdersGrid" 
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="OrdersGrid_SelectionChanged"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  GridLinesVisibility="All"
                  AlternatingRowBackground="#F5F5F5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№ Заказа" 
                                  Binding="{Binding OrderNumber}"
                                  Width="150"/>
                <DataGridTextColumn Header="Дата" 
                                  Binding="{Binding OrderDate, StringFormat=dd.MM.yyyy HH:mm}"
                                  Width="150"/>
                <DataGridTextColumn Header="Статус сборки" 
                                  Binding="{Binding CollectionStatus}"
                                  Width="150"/>
                <DataGridTemplateColumn Header="Действия"
                                      Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Собрать"
                                    Click="CollectOrder_Click"
                                    Tag="{Binding}"
                                    Margin="5"
                                    Padding="10,5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page> 