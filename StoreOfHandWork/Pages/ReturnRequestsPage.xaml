<Page x:Class="StoreOfHandWork.Pages.ReturnRequestsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:StoreOfHandWork.Pages"
      mc:Ignorable="d"
      Title="Запросы на возврат">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Запросы на возврат товаров" FontSize="24" FontWeight="Bold" Margin="20,20,20,10"/>

        <!-- Основной контент -->
        <TabControl Grid.Row="1" Margin="20,10,20,10">
            <!-- Вкладка для создания нового запроса -->
            <TabItem Header="Создать запрос">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Выбор заказа -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Заказ:" VerticalAlignment="Center" Margin="0,10,20,10"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" x:Name="OrdersComboBox" Margin="0,10,0,10" 
                              SelectionChanged="OrdersComboBox_SelectionChanged"/>

                    <!-- Выбор товара из заказа -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Товар:" VerticalAlignment="Center" Margin="0,10,20,10"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" x:Name="OrderItemsComboBox" Margin="0,10,0,10"/>

                    <!-- Тип возврата -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Тип возврата:" VerticalAlignment="Center" Margin="0,10,20,10"/>
                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,10">
                        <RadioButton x:Name="RefundRadioButton" Content="Возврат средств" IsChecked="True" Margin="0,0,20,0" 
                                     Checked="ReturnTypeRadioButton_Checked"/>
                        <RadioButton x:Name="ExchangeRadioButton" Content="Обмен товара" 
                                     Checked="ReturnTypeRadioButton_Checked"/>
                    </StackPanel>

                    <!-- Выбор товара для обмена (отображается только при выборе "Обмен товара") -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Заменить на:" VerticalAlignment="Center" Margin="0,10,20,10" 
                               x:Name="ExchangeProductLabel" Visibility="Collapsed"/>
                    <ComboBox Grid.Row="3" Grid.Column="1" x:Name="ExchangeProductComboBox" Margin="0,10,0,10" 
                              Visibility="Collapsed"/>

                    <!-- Причина возврата -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Причина возврата:" VerticalAlignment="Center" Margin="0,10,20,10"/>
                    <ComboBox Grid.Row="4" Grid.Column="1" x:Name="ReturnReasonComboBox" Margin="0,10,0,10"/>

                    <!-- Дополнительные комментарии -->
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Комментарии:" VerticalAlignment="Top" Margin="0,10,20,10"/>
                    <TextBox Grid.Row="5" Grid.Column="1" x:Name="CommentsTextBox" Margin="0,10,0,10" 
                             TextWrapping="Wrap" AcceptsReturn="True" Height="100"/>

                    <!-- Правила возврата -->
                    <Border Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,20,0,20" 
                            BorderBrush="Gray" BorderThickness="1" Padding="10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="Правила возврата:" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBlock x:Name="ReturnPolicyTextBlock" TextWrapping="Wrap"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- Кнопки действий -->
                    <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" 
                                HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button x:Name="CancelButton" Content="Отмена" Width="100" Margin="0,0,10,0" Click="CancelButton_Click"/>
                        <Button x:Name="SubmitButton" Content="Отправить запрос" Width="150" Click="SubmitButton_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Вкладка для просмотра существующих запросов -->
            <TabItem Header="Мои запросы">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Фильтры -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Статус:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="StatusFilterComboBox" Width="150" Margin="0,0,20,0" SelectionChanged="StatusFilterComboBox_SelectionChanged">
                            <ComboBoxItem Content="Все"/>
                            <ComboBoxItem Content="Заявка отправлена"/>
                            <ComboBoxItem Content="Одобрено"/>
                            <ComboBoxItem Content="Отклонено"/>
                            <ComboBoxItem Content="Товар получен"/>
                            <ComboBoxItem Content="Возврат выполнен"/>
                            <ComboBoxItem Content="Обмен оформлен"/>
                        </ComboBox>
                        
                        <TextBlock Text="Сортировка:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="SortComboBox" Width="150" SelectionChanged="SortComboBox_SelectionChanged">
                            <ComboBoxItem Content="По дате (новые)"/>
                            <ComboBoxItem Content="По дате (старые)"/>
                            <ComboBoxItem Content="По статусу"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Список запросов -->
                    <DataGrid Grid.Row="1" x:Name="ReturnRequestsDataGrid" AutoGenerateColumns="False" 
                              IsReadOnly="True" SelectionMode="Single" SelectionChanged="ReturnRequestsDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Дата запроса" Binding="{Binding RequestDate, StringFormat={}{0:dd.MM.yyyy}}" Width="100"/>
                            <DataGridTextColumn Header="Товар" Binding="{Binding OrderItem.Product.Name}" Width="*"/>
                            <DataGridTextColumn Header="Причина" Binding="{Binding Reason}" Width="150"/>
                            <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="100"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Детали запроса -->
                    <Expander Grid.Row="2" Header="Детали запроса" Margin="0,10,0,0">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Информация о запросе -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Комментарий клиента:" FontWeight="Bold" Margin="0,5,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="CustomerCommentsTextBlock" TextWrapping="Wrap" Margin="0,5,0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Ответ администратора:" FontWeight="Bold" Margin="0,5,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="AdminCommentsTextBlock" TextWrapping="Wrap" Margin="0,5,0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Дата рассмотрения:" FontWeight="Bold" Margin="0,5,10,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ReviewDateTextBlock" Margin="0,5,0,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Дата завершения:" FontWeight="Bold" Margin="0,5,10,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="CompletionDateTextBlock" Margin="0,5,0,5"/>
                        </Grid>
                    </Expander>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Статусная строка -->
        <StatusBar Grid.Row="2" Height="25">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>
