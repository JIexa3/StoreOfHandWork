<Page x:Class="StoreOfHandWork.Pages.ReturnRequestsManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:StoreOfHandWork.Pages"
      mc:Ignorable="d"
      Title="Управление возвратами">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и управление -->
        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Управление возвратами товаров" FontSize="24" FontWeight="Bold"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="ReturnPolicyButton" Content="Правила возврата" Width="150" Margin="0,0,10,0" Click="ReturnPolicyButton_Click"/>
                <Button x:Name="RefreshButton" Content="Обновить" Width="100" Click="RefreshButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Табличное представление и детали -->
        <Grid Grid.Row="1" Margin="20,10,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель - список запросов на возврат -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Фильтры и сортировка -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Статус:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Grid.Column="1" x:Name="StatusFilterComboBox" SelectionChanged="FilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="Все"/>
                        <ComboBoxItem Content="Заявка отправлена"/>
                        <ComboBoxItem Content="Одобрено"/>
                        <ComboBoxItem Content="Отклонено"/>
                        <ComboBoxItem Content="Товар получен"/>
                        <ComboBoxItem Content="Возврат выполнен"/>
                        <ComboBoxItem Content="Обмен оформлен"/>
                    </ComboBox>
                    
                    <TextBlock Grid.Column="2" Text="Тип:" VerticalAlignment="Center" Margin="20,0,5,0"/>
                    <ComboBox Grid.Column="3" x:Name="TypeFilterComboBox" SelectionChanged="FilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="Все"/>
                        <ComboBoxItem Content="Возврат средств"/>
                        <ComboBoxItem Content="Обмен товара"/>
                    </ComboBox>
                    
                    <TextBlock Grid.Column="4" Text="Сортировка:" VerticalAlignment="Center" Margin="20,0,5,0"/>
                    <ComboBox Grid.Column="5" x:Name="SortComboBox" SelectionChanged="FilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="Новые сначала"/>
                        <ComboBoxItem Content="Старые сначала"/>
                        <ComboBoxItem Content="По статусу"/>
                        <ComboBoxItem Content="По клиенту"/>
                    </ComboBox>
                </Grid>
                
                <!-- Таблица запросов -->
                <DataGrid Grid.Row="1" x:Name="ReturnRequestsDataGrid" AutoGenerateColumns="False" 
                          IsReadOnly="True" SelectionMode="Single" SelectionChanged="ReturnRequestsDataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Дата запроса" Binding="{Binding RequestDate, StringFormat={}{0:dd.MM.yyyy}}" Width="100"/>
                        <DataGridTextColumn Header="Клиент" Binding="{Binding User.Email}" Width="150"/>
                        <DataGridTextColumn Header="Товар" Binding="{Binding OrderItem.Product.Name}" Width="*"/>
                        <DataGridTextColumn Header="Причина" Binding="{Binding Reason}" Width="120"/>
                        <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="100"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            
            <!-- Разделитель -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#DDDDDD"/>
            
            <!-- Правая панель - детали запроса и управление -->
            <Grid Grid.Column="2" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Заголовок детальной информации -->
                <TextBlock Grid.Row="0" Text="Детали запроса" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <!-- Детальная информация о запросе -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="DetailsPanel" Visibility="Collapsed">
                        <!-- Информация о запросе -->
                        <GroupBox Header="Информация о запросе" Margin="0,0,0,10">
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="№ запроса:" FontWeight="Bold" Margin="0,5,10,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="RequestIdTextBlock" Margin="0,5,0,5"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Дата:" FontWeight="Bold" Margin="0,5,10,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="RequestDateTextBlock" Margin="0,5,0,5"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Клиент:" FontWeight="Bold" Margin="0,5,10,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="CustomerTextBlock" Margin="0,5,0,5"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Заказ:" FontWeight="Bold" Margin="0,5,10,5"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="OrderTextBlock" Margin="0,5,0,5"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Товар:" FontWeight="Bold" Margin="0,5,10,5"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="ProductTextBlock" TextWrapping="Wrap" Margin="0,5,0,5"/>
                                
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Статус:" FontWeight="Bold" Margin="0,5,10,5"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" x:Name="StatusTextBlock" Margin="0,5,0,5"/>
                            </Grid>
                        </GroupBox>
                        
                        <!-- Детали возврата -->
                        <GroupBox Header="Детали возврата" Margin="0,0,0,10">
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Тип возврата:" FontWeight="Bold" Margin="0,5,10,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="ReturnTypeTextBlock" Margin="0,5,0,5"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Причина:" FontWeight="Bold" Margin="0,5,10,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ReasonTextBlock" Margin="0,5,0,5"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Комментарий:" FontWeight="Bold" Margin="0,5,10,5" VerticalAlignment="Top"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="CommentsTextBlock" TextWrapping="Wrap" Margin="0,5,0,5"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Товар обмена:" FontWeight="Bold" Margin="0,5,10,5" x:Name="ExchangeProductLabel"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="ExchangeProductTextBlock" TextWrapping="Wrap" Margin="0,5,0,5"/>
                            </Grid>
                        </GroupBox>
                        
                        <!-- Обработка запроса -->
                        <GroupBox Header="Обработка запроса" Margin="0,0,0,10">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Выбор статуса -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5,0,5">
                                    <TextBlock Text="Изменить статус:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <ComboBox x:Name="ChangeStatusComboBox" Width="200"/>
                                </StackPanel>
                                
                                <!-- Комментарий администратора -->
                                <TextBlock Grid.Row="1" Text="Комментарий администратора:" Margin="0,10,0,5"/>
                                <TextBox Grid.Row="2" x:Name="AdminCommentsTextBox" TextWrapping="Wrap" AcceptsReturn="True" Height="80"/>
                                
                                <!-- Кнопки действий -->
                                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                                    <Button x:Name="SaveButton" Content="Сохранить изменения" Width="150" Click="SaveButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Статусная строка -->
        <StatusBar Grid.Row="2" Height="25">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlockBar"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>
