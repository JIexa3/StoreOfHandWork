<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="StoreOfHandWork.ProductDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreOfHandWork"
        mc:Ignorable="d"
        Title="Детали товара" Height="650" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Основная информация о товаре -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Изображение продукта -->
            <Image x:Name="ProductImage" Grid.Column="0" Margin="20" Stretch="Uniform" Height="250"/>

            <!-- Информация о продукте -->
            <StackPanel Grid.Column="1" Margin="10,20,20,20">
                <TextBlock x:Name="ProductNameTextBlock" FontSize="24" FontWeight="Bold" TextWrapping="Wrap"/>
                
                <!-- Рейтинг товара -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock x:Name="ProductRatingTextBlock" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Text=" из 5" FontSize="14" Margin="2,2,0,0"/>
                    <TextBlock x:Name="ReviewCountTextBlock" FontSize="14" Margin="10,2,0,0" Foreground="Gray"/>
                </StackPanel>
                
                <TextBlock x:Name="ProductPriceTextBlock" FontSize="18" Margin="0,10,0,10"/>
                <TextBlock x:Name="ProductCategoryTextBlock" FontSize="14" Margin="0,0,0,5"/>
                
                <!-- Теги товара -->
                <StackPanel x:Name="TagsPanel" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Теги: " FontSize="14"/>
                </StackPanel>
                
                <TextBlock x:Name="ProductStockTextBlock" FontSize="14" Margin="0,0,0,10"/>
                <TextBlock Text="Описание:" FontSize="16" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <TextBlock x:Name="ProductDescriptionTextBlock" TextWrapping="Wrap" Margin="0,0,0,20"/>
                
                <!-- Кнопки действий -->
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="AddToCartButton" Content="Добавить в корзину" Width="180" Height="40" 
                            HorizontalAlignment="Left" Click="AddToCartButton_Click" Margin="0,0,15,0"
                            Background="#3498db" Foreground="White" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="3"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="AddToWishListButton" Content="В список желаний" Width="180" Height="40" 
                            HorizontalAlignment="Left" Click="AddToWishListButton_Click"
                            Background="#3498db" Foreground="White" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="3"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
        
        <!-- Вкладки с отзывами и дополнительной информацией -->
        <TabControl Grid.Row="1" Margin="10,20,10,10">
            <TabItem Header="Отзывы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Кнопка перехода к полному списку отзывов -->
                    <Button Grid.Row="0" Content="Все отзывы и оставить отзыв" HorizontalAlignment="Right" 
                            Margin="0,10,10,10" Height="30" Width="200" Click="ViewAllReviewsButton_Click"/>
                    
                    <!-- Список последних отзывов -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ReviewsPanel" Margin="10">
                            <TextBlock x:Name="NoReviewsTextBlock" Text="У этого товара пока нет отзывов." 
                                      FontSize="14" Margin="0,20,0,0" HorizontalAlignment="Center" 
                                      Visibility="Collapsed"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Информация о доставке">
                <TextBlock TextWrapping="Wrap" Margin="10,10,10,10" FontSize="14" LineHeight="20">
                    <Run Text="Доставка осуществляется по всей России."/>
                    <LineBreak/>
                    <LineBreak/>
                    <Run Text="Способы доставки:"/>
                    <LineBreak/>
                    <Run Text="- Почта России: 3-14 дней"/>
                    <LineBreak/>
                    <Run Text="- СДЭК: 1-5 дней"/>
                    <LineBreak/>
                    <Run Text="- Курьерская доставка (в крупных городах): 1-2 дня"/>
                    <LineBreak/>
                    <LineBreak/>
                    <Run Text="Стоимость доставки рассчитывается индивидуально в зависимости от веса товара и региона доставки."/>
                </TextBlock>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
