<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="StoreOfHandWork.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель администратора" Height="800" Width="1480"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковая панель навигации -->
        <StackPanel Grid.Column="0" Background="#2c3e50" Margin="0,0,5,0">
            <TextBlock Text="Панель управления" 
                       Foreground="White" 
                       FontSize="24" 
                       Margin="20,30,20,30"
                       TextAlignment="Center"/>

            <Button x:Name="ProductsButton" 
                    Content="Управление товарами" 
                    Height="50" 
                    Margin="10,5"
                    Background="#34495e"
                    Foreground="White"
                    BorderThickness="0"
                    Click="ProductsButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980b9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="CategoriesButton" 
                    Content="Управление категориями" 
                    Height="50" 
                    Margin="10,5"
                    Background="#34495e"
                    Foreground="White"
                    BorderThickness="0"
                    Click="CategoriesButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980b9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="OrdersButton" 
                    Content="Управление заказами" 
                    Height="50" 
                    Margin="10,5"
                    Background="#34495e"
                    Foreground="White"
                    BorderThickness="0"
                    Click="OrdersButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980b9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="WarehouseButton" 
                    Content="Склад" 
                    Height="50" 
                    Margin="10,5"
                    Background="#34495e"
                    Foreground="White"
                    BorderThickness="0"
                    Click="WarehouseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980b9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="UsersButton" 
                    Content="Управление пользователями" 
                    Height="50" 
                    Margin="10,5"
                    Background="#34495e"
                    Foreground="White"
                    BorderThickness="0"
                    Click="UsersButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980b9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="TagsButton" 
                    Content="Управление тегами" 
                    Height="50" 
                    Margin="10,5"
                    Background="#34495e"
                    Foreground="White"
                    BorderThickness="0"
                    Click="TagsButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980b9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="StatisticsButton" 
                    Content="Статистика" 
                    Height="50" 
                    Margin="10,5"
                    Background="#34495e"
                    Foreground="White"
                    BorderThickness="0"
                    Click="StatisticsButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980b9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="ReportsButton" 
                    Content="Отчеты" 
                    Height="50" 
                    Margin="10,5"
                    Background="#34495e"
                    Foreground="White"
                    BorderThickness="0"
                    Click="ReportsButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980b9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="ReturnRequestsButton" 
                    Content="Управление возвратами" 
                    Height="50" 
                    Margin="10,5"
                    Background="#34495e"
                    Foreground="White"
                    BorderThickness="0"
                    Click="ReturnRequestsButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980b9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="ReturnPolicyButton" 
                    Content="Политики возврата" 
                    Height="50" 
                    Margin="10,5"
                    Background="#34495e"
                    Foreground="White"
                    BorderThickness="0"
                    Click="ReturnPolicyButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980b9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="LogoutButton" 
                    Content="Выйти" 
                    Height="50" 
                    Margin="10,5"
                    Background="#c0392b"
                    Foreground="White"
                    BorderThickness="0"
                    Click="LogoutButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#e74c3c"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Основная область контента -->
        <Frame x:Name="MainFrame" 
               Grid.Column="1" 
               NavigationUIVisibility="Hidden"
               Background="#ecf0f1"/>
    </Grid>
</Window>
