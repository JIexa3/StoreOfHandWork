<Window x:Class="StoreOfHandWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:StoreOfHandWork.Converters"
        Title="МАГАЗИН ТОВАРОВ РУЧНОЙ РАБОТЫ" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <converters:IntToVisibilityConverter x:Key="NumberToVisibilityConverter"/>
        <converters:ProductStockToButtonTextConverter x:Key="StockToButtonTextConverter"/>
        <converters:ProductStockToButtonStateConverter x:Key="StockToButtonStateConverter"/>
        
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Background="#3498db">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="МАГАЗИН ТОВАРОВ РУЧНОЙ РАБОТЫ"
                         Foreground="White"
                         FontSize="24"
                         FontWeight="Bold"
                         VerticalAlignment="Center"
                         Margin="20,0"/>

                <StackPanel Grid.Column="1"
                          Orientation="Horizontal"
                          Margin="10,0">
                    <!-- Кнопка корзины -->
                    <Button x:Name="CartButton"
                           Click="OpenCart_Click"
                           Style="{StaticResource MenuButtonStyle}"
                           ToolTip="Корзина">
                        <Grid>
                            <Path Data="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"
                                  Fill="White"
                                  Width="20"
                                  Height="20"
                                  Stretch="Uniform"
                                  Margin="0,0,5,0"/>
                            <Border Background="#2196F3"
                                    CornerRadius="10"
                                    Padding="6,2"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Right"
                                    Margin="0,-5,-5,0">
                                <TextBlock x:Name="CartItemCountTextBlock"
                                         Text="{Binding CartItemCount}"
                                         Foreground="White"
                                         FontSize="12"/>
                            </Border>
                        </Grid>
                    </Button>

                    <!-- Кнопка избранного -->
                    <Button x:Name="WishListButton"
                           Click="WishList_Click"
                           Style="{StaticResource MenuButtonStyle}"
                           ToolTip="Избранное">
                        <Path Data="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"
                                  Fill="White"
                                  Width="20"
                                  Height="20"
                                  Stretch="Uniform"/>
                    </Button>

                    <!-- Кнопка профиля -->
                    <Button x:Name="ProfileButton"
                           Click="ProfileButton_Click"
                           Style="{StaticResource MenuButtonStyle}"
                           ToolTip="Профиль">
                        <Path Data="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"
                                  Fill="White"
                                  Width="20"
                                  Height="20"
                                  Stretch="Uniform"/>
                    </Button>

                    <!-- Кнопка выхода -->
                    <Button x:Name="LogoutButton"
                           Content="Выйти"
                           Click="Logout_Click"
                           Style="{StaticResource MenuButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Категории -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="10" 
                    Margin="0,0,15,0">
                <DockPanel Margin="15">
                    <TextBlock Text="Категории" 
                             DockPanel.Dock="Top"
                             FontSize="20" 
                             FontWeight="SemiBold" 
                             Margin="5,0,0,15"/>
                    
                    <ListBox x:Name="CategoriesListBox"
                            SelectionChanged="CategoriesListBox_SelectionChanged"
                            Background="Transparent"
                            BorderThickness="0">
                        <ListBox.Resources>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="0,2"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderThickness="0"
                                                    CornerRadius="5">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#2196F3"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E3F2FD"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.Resources>
                        <ListBoxItem Content="Все товары" IsSelected="True"/>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Список товаров -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Панель поиска и сортировки -->
                <Border Grid.Row="0" Background="White" CornerRadius="5" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Поиск по названию и тегам -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="SearchBox" 
                                     Grid.Column="0" 
                                     Margin="0,0,10,0" 
                                     Padding="5"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     TextChanged="SearchBox_TextChanged"
                                     Height="32"
                                     BorderBrush="#ccc"
                                     BorderThickness="1">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            
                            <ComboBox x:Name="SearchTypeComboBox" 
                                      Grid.Column="1" 
                                      Width="150" 
                                      Margin="0,0,10,0"
                                      SelectedIndex="0"
                                      Height="32"
                                      VerticalContentAlignment="Center"
                                      SelectionChanged="SearchTypeComboBox_SelectionChanged">
                                <ComboBoxItem Content="По названию"/>
                                <ComboBoxItem Content="По тегам"/>
                            </ComboBox>
                            
                            <Button Grid.Column="2" 
                                    Content="Очистить" 
                                    Height="32" 
                                    Width="80"
                                    Background="#3498db"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Click="ClearSearch_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                        
                        <!-- Сортировка -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="Сортировка:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0"/>
                            
                            <ComboBox x:Name="SortByComboBox" 
                                      Grid.Column="1" 
                                      Width="150" 
                                      Margin="0,0,10,0"
                                      SelectedIndex="0"
                                      Height="30"
                                      VerticalContentAlignment="Center"
                                      SelectionChanged="SortByComboBox_SelectionChanged">
                                <ComboBoxItem Content="Без сортировки"/>
                                <ComboBoxItem Content="По цене (возр.)"/>
                                <ComboBoxItem Content="По цене (убыв.)"/>
                                <ComboBoxItem Content="По количеству (возр.)"/>
                                <ComboBoxItem Content="По количеству (убыв.)"/>
                            </ComboBox>
                            
                            <Button Grid.Column="2" 
                                    Content="Обновить" 
                                    Height="30" 
                                    Width="80"
                                    Background="#3498db"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Click="RefreshProducts_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </Grid>
                </Border>
                
                <ListView x:Name="ProductsListView"
                         Grid.Row="1"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Width="300"
                                Height="400"
                                Margin="10"
                                BorderThickness="1"
                                BorderBrush="#dee2e6"
                                CornerRadius="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="200"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Image Source="{Binding ImagePath}"
                                       Stretch="Uniform"
                                       Margin="10"/>

                                <StackPanel Grid.Row="1"
                                          Margin="10">
                                    <TextBlock Text="{Binding Name}"
                                             FontSize="16"
                                             FontWeight="SemiBold"
                                             TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Price, StringFormat={}{0:N2} ₽}"
                                             Foreground="#2ecc71"
                                             FontWeight="Bold"
                                             FontSize="18"
                                             Margin="0,5"/>
                                    <TextBlock Text="{Binding Description}"
                                             TextWrapping="Wrap"
                                             MaxHeight="80"
                                             TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding StockQuantity, StringFormat='В наличии: {0} шт.'}"
                                             Foreground="#666"
                                             Margin="0,5,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2"
                                          Orientation="Horizontal"
                                          Margin="10"
                                          HorizontalAlignment="Center">
                                    <Button Content="Подробнее"
                                            Width="180"
                                            Height="35"
                                            Tag="{Binding}"
                                            Click="ViewProductDetails_Click"
                                            Style="{StaticResource MenuButtonStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            </Grid>
        </Grid>
    </Grid>
</Window>
